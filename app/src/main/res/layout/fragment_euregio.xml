<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.almaviva.euregio.fragment.EuregioFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/card_fronte" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/bottom_navigation_min_width"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/bottom_navigation_height"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:padding="16dp"
        android:src="@android:drawable/ic_menu_revert"
        app:backgroundTint="@color/colorPrimary" />


</FrameLayout>
